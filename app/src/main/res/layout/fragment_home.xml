<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <data>
        <variable
            name="viewModel"
            type="com.gbdev.ghostbarber.ui.home.HomeViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1">

        <!-- Search bar with logo -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/logo_desc"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/plus"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/wallet_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageButton
                android:id="@+id/wallet_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/wallet"
                android:scaleType="fitCenter"
                android:src="@drawable/wallet_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/game_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageButton
                android:id="@+id/game_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/games"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/search_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageButton
                android:id="@+id/search_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/search"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <!-- Create Post Popup -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createPostPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:visibility="gone"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/createPostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/createStoryButton"
                android:scaleType="fitCenter"/>

            <Button
                android:id="@+id/createStoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Story"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/createPostButton"
                app:layout_constraintEnd_toStartOf="@id/createReelButton"
                android:scaleType="fitCenter"/>

            <Button
                android:id="@+id/createReelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/createStoryButton"
                app:layout_constraintEnd_toStartOf="@id/createLiveButton"
                android:scaleType="fitCenter"/>

            <Button
                android:id="@+id/createLiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/createReelButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitCenter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Fixed Navigation Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:contentDescription="@string/home"
                android:src="@drawable/ic_home"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/aiHairstyleButton"
                android:scaleType="fitCenter"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/aiHairstyleButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:contentDescription="@string/message"
                android:src="@drawable/ic_ai_hairstyle"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintStart_toEndOf="@id/homeButton"
                app:layout_constraintEnd_toStartOf="@+id/reelsButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitCenter"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/reelsButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:contentDescription="@string/reels"
                android:src="@drawable/ic_reels"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintStart_toEndOf="@id/aiHairstyleButton"
                app:layout_constraintEnd_toStartOf="@+id/ic_booking"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitCenter"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/ic_booking"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:contentDescription="@string/cart"
                android:src="@drawable/ic_booking"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintStart_toEndOf="@id/reelsButton"
                app:layout_constraintEnd_toStartOf="@+id/profileButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitCenter"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:contentDescription="@string/profile"
                android:src="@drawable/ic_profile"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintStart_toEndOf="@id/ic_booking"
                app:layout_constraintEnd_toStartOf="@+id/moreButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitCenter"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/moreButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:contentDescription="@string/more"
                android:src="@drawable/ic_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintStart_toEndOf="@id/profileButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitCenter"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- RecyclerView for posts -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/top_navigation_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dim overlay -->
        <View
            android:id="@+id/dim_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.5"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Floating Search Bar -->
        <include
            android:id="@+id/floating_search_bar"
            layout="@layout/floating_search_bar"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
